<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9bede9e9"
    tools:context=".fragments.LeiloarFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddImg"
            android:background="@drawable/adicionarfoto"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="@string/t_tulo"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:background="@color/white"
            android:id="@+id/edit_nomeProduto"
            android:layout_marginTop="25dp"
            android:inputType="text"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="@string/descri_o"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:background="@color/white"
            android:id="@+id/edit_DescricaoProduto"
            android:inputType="text"/>

        <Spinner
            android:id="@+id/spinnerclasse"
            android:background="@color/verdeEscuro"
            android:popupBackground="#e29ae1c9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:entries="@array/spinerTipoProduto"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edit_nomeCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="@string/cidade"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:background="@color/white"
            android:inputType="text"/>


        <Button
            android:id="@+id/button_leiloar"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leiloar"
            android:clickable="true"
            android:textColor="#ffffff"
            android:padding="16dp"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:background="@drawable/edteste2"/>


    </LinearLayout>

</FrameLayout>